@model EditOrderHeader

<div class="modal fade" id="deleteOrderHeaderModal-@Model.Id" tabindex="-1" aria-labelledby="deleteOrderHeaderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteOrderHeaderModalLabel">Delete Order Header</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this order header: @Model.OrderNumber?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">No, Cancel</button>
                <form asp-controller="OrderHeaders" asp-action="DeleteOrderHeader" asp-route-id="@Model.Id">
                    <button class="btn btn-danger" type="submit">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>