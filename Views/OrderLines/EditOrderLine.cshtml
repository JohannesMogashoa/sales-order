@{
    ViewData["Title"] = "Edit Order Line";
}
@model EditOrderLine

<h3 class="my-4">Editing: @Model.Id</h3>
<hr />
<form asp-controller="OrderLines" asp-action="EditOrderLine" asp-route-id="@ViewBag.Id" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input hidden asp-for="Id" />
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="ProductCode" class="form-label">Product Code</label>
                <input type="text" class="form-control" asp-for="ProductCode" placeholder="GSX837420">
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="ProductType" class="form-label">Product Type</label>
                <select asp-for="ProductType" asp-items="Html.GetEnumSelectList<ProductType>()" class="form-control"></select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="ProductCostPrice" class="form-label">Product Cost Price</label>
                <input type="number" class="form-control" asp-for="ProductCostPrice">
                <span asp-validation-for="ProductCostPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="ProductSalesPrice" class="form-label">Product Sales Price</label>
                <input type="number" class="form-control" asp-for="ProductSalesPrice">
                <span asp-validation-for="ProductSalesPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label">Quantity</label>
                <input type="number" class="form-control" asp-for="Quantity">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <a href="javascript: history.go(-1)" class="btn btn-danger me-4">Cancel</a>
        <button class="btn btn-success" type="submit">Edit</button>
    </div>
</form>